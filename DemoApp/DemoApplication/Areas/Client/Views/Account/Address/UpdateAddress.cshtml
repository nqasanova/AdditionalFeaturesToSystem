@model UpdateAddressViewModel

<div class="account-details-form">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    <form method="POST" asp-route="client-account-update-address">

        <div class="col-12  mb--30">
            <h4>Add Address</h4>
        </div>
        <div class="col-12 col-lg-6 mb--30">
            <label asp-for="OrdererFirstName"></label>
            <input asp-for="OrdererFirstName" class="form-control">
            <span asp-validation-for="OrdererFirstName" class="text-danger"></span>
        </div>
        <div class="col-lg-6 col-12  mb--30">
            <label asp-for="OrdererLastName"></label>
            <input asp-for="OrdererLastName" class="form-control">
            <span asp-validation-for="OrdererLastName" class="text-danger"></span>
        </div>
        <div class="col-lg-6 col-12  mb--30">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control">
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-lg-6 col-12  mb--30">
            <label asp-for="PhoneNumber"></label>
            <input asp-for="PhoneNumber" class="form-control">
            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        </div>
        <div class="col-12">
            <button class="btn btn--primary">Save Changes</button>
        </div>
    </form>
</div>